      <div class="shadow">
        <div *ngIf="activeItem != ''" class="text-end me-3">
          <button
            type="button"
            class="btn-close mt-3 fw-light"
            aria-label="Close"
            (click)="onCloseClick($event)"
          ></button>
        </div>
        <h3
          class="text-center"
          [ngClass]="
            activeItem.length % 2 == 0 ? 'text-success' : 'text-danger'
          "
        >
