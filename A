import {
  Component,
  OnInit,
  ViewChildren,
  QueryList,
  ViewContainerRef,
  ViewChild,
  Type,
} from '@angular/core';
import { TaskStatusComponent } from '../task-status/task-status.component';
import { TaskPrioritiesComponent } from '../task-priorities/task-priorities.component';
import { ClientLocationsComponent } from '../client-locations/client-locations.component';
import { CountriesComponent } from '../countries/countries.component';

@Component({
  selector: 'app-masters',
  templateUrl: './masters.component.html',
  styleUrls: ['./masters.component.scss'],
})
export class MastersComponent implements OnInit {
  masterMenuItems = [
    {
      itemName: 'Countries',
      displayName: 'Countries',
      component: CountriesComponent,
    },
    {
      itemName: 'ClientLocations',
      displayName: 'Client Locations',
      component: ClientLocationsComponent,
    },
    {
      itemName: 'TaskPriorities',
      displayName: 'Task Priorities',
      component: TaskPrioritiesComponent,
    },
    {
      itemName: 'TaskStatus',
      displayName: 'Task Status',
      component: TaskStatusComponent,
    },
  ];

  @ViewChild('container', { read: ViewContainerRef, static: true })
  container!: ViewContainerRef;
  tabs: any = [];
  activeItem = '';

  ngOnInit(): void {
    this.tabs.push(this.masterMenuItems[0]);
    this.container.createComponent(this.masterMenuItems[0].component);
    this.activeItem = this.tabs[0].displayName;
  }

  onCreateComponent(itemName: string) {
    const item = this.masterMenuItems.filter(
      (item: any) => item.itemName === itemName
    );

    if (this.tabs.length < 1) {
      this.tabs.push(item[0]);
      this.container.clear();
      this.container.createComponent(this.tabs[0].component);
      this.activeItem = this.tabs[0].displayName;
    } else {
      this.tabs.splice(0, 1);
      this.tabs.push(item[0]);
      this.container.clear();
      this.container.createComponent(this.tabs[0].component);
      this.activeItem = this.tabs[0].displayName;
    }
  }
  onCloseClick(event: any) {
    this.tabs.splice(0, 1);
    this.container.clear();
    this.activeItem = '';
  }
}
